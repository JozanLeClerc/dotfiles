#!/usr/local/bin/dash

xrandr --output LVDS1 --primary --mode 1366x768 --pos 1920x156 --rotate normal --output VGA1 --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI1 --off --output DP1 --off --output HDMI2 --off --output HDMI3 --off --output DP2 --off --output DP3 --off

bspc monitor LVDS1 -d 04 05 06 07 08 09 10
bspc monitor VGA1 -d 01 02 03
